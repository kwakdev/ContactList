<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/contacts"
        android:fontFamily="@font/archivo_black"

        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:padding="16dp"
        android:background="@android:color/darker_gray" />

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titleTextView"
        android:padding="16dp" />

    <LinearLayout
        android:id="@+id/navigation"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="#999A97"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/llAddEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageButton
                android:id="@+id/btnAddEmail"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_email"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_black"

                android:text="@string/add_email"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llContactList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageButton
                android:id="@+id/btnContactList"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_contacts"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_black"

                android:text="@string/contact_list"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llAddPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageButton
                android:id="@+id/btnAddPhone"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_phone"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_phone"
                android:fontFamily="@font/archivo_black"

                android:textColor="@android:color/black" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
